<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherSignUp"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/tSignupScreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/teachersignup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="199dp"
        android:fontFamily="@font/tata"
        android:text="SIGN UP"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tSignupScreen"
        app:layout_constraintVertical_bias="0.991" />

    <EditText
        android:id="@+id/name"
        android:layout_width="147dp"
        android:layout_height="58dp"
        android:layout_marginStart="36dp"
        android:gravity="center"


        android:hint="Name"
        android:textColor="#EDFFFFFF"
        android:textColorHint="#81FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.907"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/email"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="49dp"
        android:gravity="center"
        android:hint="Email"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#EDFFFFFF"
        android:textColorHint="#82FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/institution"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/address"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="49dp"
        android:gravity="center"
        android:hint="Address"
        android:textColor="#EDFFFFFF"
        android:textColorHint="#82FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/semester"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="45dp"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#EDFFFFFF"
        android:textColorHint="#82FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/confirmPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/institution"
        android:layout_width="149dp"
        android:layout_height="53dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="209dp"
        android:gravity="center"
        android:hint="Institution"
        android:textColor="#EDFFFFFF"
        android:textColorHint="#82FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/signUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.711"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/semester"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="26dp"
        android:gravity="center"
        android:hint="Semester"
        android:textColor="#EDFFFFFF"
        android:textColorHint="#82FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/address"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="23dp"
        android:gravity="center"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="#EDFFFFFF"
        android:textColorHint="#82FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/password"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>