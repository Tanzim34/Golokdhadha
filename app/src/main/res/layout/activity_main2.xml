<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/frontpage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/frontpage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/studentbutton"
        style="@style/Widget.Material3.Button"
        android:layout_width="162dp"
        android:layout_height="54dp"
        android:layout_marginTop="240dp"
        android:fontFamily="@font/tata"
        android:text="Student"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/frontpage" />

    <Button
        android:id="@+id/teacherbutton"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="320dp"
        android:fontFamily="@font/tata"
        android:text="Teacher"
        android:textColorHighlight="@color/design_default_color_primary_dark"
        android:textColorLink="@color/design_default_color_primary"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/studentbutton"
        app:layout_constraintStart_toStartOf="@+id/studentbutton"
        app:layout_constraintTop_toTopOf="@+id/frontpage" />

</androidx.constraintlayout.widget.ConstraintLayout>